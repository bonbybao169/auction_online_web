<div style="background-color: #a6c7f0" class="card mb-3 text-center">
    <h4 class="card-header text-white">
        TOP 5 SẢN PHẨM GẦN KẾT THÚC
    </h4>
    <div class="card-body">
        <div class="row">
            {{#each this.productsEE}}
                <div class="col-sm-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header">
                            <h4>{{Name}}</h4>
                        </div>
                        <div class="card-body">
                            <img src="/image/products/{{ID}}-main.jpg" width="300" height="200" alt="{{Name}}" title="{{Name}}">
                            <h5 class="card-text text-danger mt-3">{{format_number PriceBuyNow}}&#x20AB;</h5>
                            <p class="card-text mt-2 align-bottom">{{Description}}</p>
                        </div>
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-secondary" formaction="/admin/categories/del" disabled>
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Xoá
                            </button>
                            <a class="btn btn-primary" href="#" role="button">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                <span>Chi tiết</span>
                            </a>
                            <a class="btn btn-secondary disabled" href="#" role="button">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                <span>Mua ngay</span>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <div class="card-footer text-white">
        2 days ago
    </div>
</div>
