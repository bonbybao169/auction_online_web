<div style="background-color: #a6c7f0" class="card mb-3 text-center">
    <h4 class="card-header text-white">
        TOP 5 SẢN PHẨM GẦN KẾT THÚC
    </h4>
    <div class="card-body">
        <div class="row">
            {{#each this.productsEE}}
                <div class="col-sm-4 mb-3">
                    <div class="card h-100">
                        <div class="card-header">
                            <h4>{{Name}}</h4>
                            <h6 style="color: dimgray">Ngày đăng: {{DateUpload}}</h6>
                            <h6 style="color: dimgray">Còn lại: {{DateExpired}}</h6>
                        </div>
                        <div class="card-body">
                            <img src="/image/products/{{ID}}-main.jpg" width="300" height="200" alt="{{Name}}"
                                 title="{{Name}}">
                            <h5 class="card-text text-danger mt-3">Giá hiện tại: {{format_number PresentPrice}}
                                &#x20AB;</h5>
                            <h5 class="card-text text-danger">Giá mua ngay: {{format_number PriceBuyNow}}&#x20AB;</h5>
                            {{#if (isNotNull HighestBidder)}}
                            <h5 class="card-text text-success mt-3">Bidder đang đặt giá cao nhất: {{HighestBidder}}</h5>
                            {{else}}
                            <h5 class="card-text text-success mt-3">Chưa có người ra giá</h5>
                            {{/if}}
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <h5 class="card-text my-auto bg-warning ">Lượt xem: {{Turn}}</h5>
                            <span>
                                <a class="btn btn-primary my-2" href="#" role="button">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    <span>Chi tiết</span>
                                </a>
                                <a class="btn btn-success" href="#" role="button">
                                     <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-secondary disabled" href="#" role="button">
                                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                    <span>Mua ngay</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <div class="card-footer text-white">
        2 days ago
    </div>
</div>
