<div class="card text-center">
    <h4 class="card-header d-flex justify-content-between">
        Sản phẩm
    </h4>
    <div class="card-body">
        {{#if this.empty}}
            <h5 class="card-title">Không có dữ liệu</h5>
        {{else}}
            <div class="row">
                {{#each this.products}}
                    <div class="col-sm-4 mb-3">
                        <div class="card h-100">
                            <div class="card-header">
                                <h4>{{Name}}</h4>
                                <h6 style="color: dimgray">Ngày đăng: {{DateUpload}}</h6>
                            </div>
                            <div class="card-body">
                                <img src="/image/products/{{ID}}-main.jpg" width="300" height="200" alt="{{Name}}"
                                     title="{{Name}}">
                                <h5 class="card-text text-danger mt-3">Giá hiện tại: {{format_number PresentPrice}}
                                    &#x20AB;</h5>
                                <h5 class="card-text text-danger">Giá mua ngay: {{format_number PriceBuyNow}}
                                    &#x20AB;</h5>
                                <h5 class="card-text text-success mt-3">Bidder đang đặt cao nhất: {{HighestBidder}}</h5>
                                <p class="card-text mt-2 align-bottom mt-3">{{Description}}</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <h5 class="mt-2">Lượt: {{Turn}}</h5>
                                <span>
                                <button type="submit" class="btn btn-secondary" formaction="/admin/categories/del"
                                        disabled>
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    Xoá
                                </button>
                                <a class="btn btn-primary" href="#" role="button">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    <span>Chi tiết</span>
                                </a>
                                <a class="btn btn-secondary disabled" href="#" role="button">
                                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                    <span>Mua ngay</span>
                                </a>
                            </span>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{/if}}
    </div>
    <div class="card-footer text-muted">
        2 days ago
    </div>
</div>