<div class="card" style="background-color: #e0c1f2">
    <h4 class="card-header d-flex justify-content-between" style="color: #9A0680; font-weight: bold; background-color: #b7aef2;">
        <a></a>
        Sản phẩm
        <a class="btn btn-outline dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-expanded="false" style="color: #9A0680; font-size: 20px;">
            Sắp xếp
        </a>
        <div class="dropdown-menu" style="" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="?keyword={{this.ProName}}&page=1&DateExpiredDescend=1">Thời gian kết thúc giảm dần</a>
            <a class="dropdown-item" href="?keyword={{this.ProName}}&page=1&PriceAscend=1">Giá tăng dần</a>
        </div>
    </h4>
    <div class="card-body text-center">
        {{#if this.empty}}
            <h5 class="card-title">Không có dữ liệu</h5>
        {{else}}
            <div class="row">
                {{#each this.products}}
                    {{#if (checkNewUpload UploadRecently)}}
                        <div class="col-sm-4 mb-3">
                            <div class="card h-100">
                                <div class="card-header" style="background-color: #4bbaff">
                                    <h4>{{Name}}</h4>
                                    <h6 style="color: dimgray">Ngày đăng: {{DateUpload}}</h6>
                                    <h6 style="color: dimgray">Kết thúc: {{DateExpired}}</h6>
                                </div>
                                <img  class="card-img-top" src="/image/products/{{ID}}-main.jpg"  alt="{{Name}}"
                                      title="{{Name}}">
                                <div class="card-body">
                                    <h5 class="card-text text-danger mt-3">Giá hiện tại: {{format_number PresentPrice}}
                                        &#x20AB;</h5>
                                    <h5 class="card-text text-danger">Giá mua ngay: {{format_number PriceBuyNow}}
                                        &#x20AB;</h5>
                                    {{#if (isNotNull HighestBidder)}}
                                        <h5 class="card-text text-success mt-3">Bidder đang đặt giá cao nhất: {{HighestBidder}}</h5>
                                    {{else}}
                                        <h5 class="card-text text-success mt-3">Chưa có người ra giá</h5>
                                    {{/if}}
                                    <p class="card-text mt-2 align-bottom mt-3">{{TinyDes}}</p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <h5 class="card-text my-auto bg-warning" style="width: 130px; height: 36px; padding-top: 6px">lượt ra giá: {{Turn}}</h5>
                                    <span>
                                <a class="btn btn-primary" href="/products/{{ID}}" role="button">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    <span>Chi tiết</span>
                                </a>
                            </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="col-sm-4 mb-3">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h4>{{Name}}</h4>
                                    <h6 style="color: dimgray">Ngày đăng: {{DateUpload}}</h6>
                                    <h6 style="color: dimgray">Kết thúc: {{DateExpired}}</h6>
                                </div>
                                <img  class="card-img-top" src="/image/products/{{ID}}-main.jpg"  alt="{{Name}}"
                                      title="{{Name}}">
                                <div class="card-body">
                                    <h5 class="card-text text-danger mt-3">Giá hiện tại: {{format_number PresentPrice}}
                                        &#x20AB;</h5>
                                    <h5 class="card-text text-danger">Giá mua ngay: {{format_number PriceBuyNow}}
                                        &#x20AB;</h5>
                                    {{#if (isNotNull HighestBidder)}}
                                        <h5 class="card-text text-success mt-3">Bidder đang đặt giá cao nhất: {{encryptBidder HighestBidder}}</h5>
                                    {{else}}
                                        <h5 class="card-text text-success mt-3">Chưa có người ra giá</h5>
                                    {{/if}}
                                    <p class="card-text mt-2 align-bottom mt-3">{{TinyDes}}</p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <h5 class="card-text my-auto bg-warning" style="width: 130px; height: 36px; padding-top: 6px">lượt ra giá: {{Turn}}</h5>
                                    <span>
                                <a class="btn btn-primary" href="/products/{{ID}}" role="button">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    <span>Chi tiết</span>
                                </a>
                            </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                    <li class="page-item">
                        {{#if this.firstPage}}
                            <a class="page-link disabled" style="cursor: not-allowed;">Previous</a>
                        {{else}}
                            <a class="page-link" href="?keyword={{ProName}}&page={{this.previousPage}}">Previous</a>
                        {{/if}}
                    </li>
                    {{#each this.pageNumbers}}
                        {{#if isCurrent}}
                            <li class="page-item active">
                                <a class="page-link" href="javascript:;">{{value}}</a>
                            </li>
                        {{else}}
                            <li class="page-item">
                                <a class="page-link" href="?keyword={{../ProName}}&page={{value}}&DateExpiredDescend={{../DateExpiredDescend}}&PriceAscend={{../PriceAscend}}">{{value}}</a>
                            </li>
                        {{/if}}
                    {{/each}}
                    <li class="page-item">
                        {{#if this.lastPage}}
                            <a class="page-link disabled" style="cursor: not-allowed;">Next</a>
                        {{else}}
                            <a class="page-link" href="?keyword={{ProName}}&page={{this.nextPage}}&DateExpiredDescend={{../DateExpiredDescend}}&PriceAscend={{../PriceAscend}}">Next</a>
                        {{/if}}
                    </li>
                </ul>
            </nav>
        {{/if}}
    </div>
</div>