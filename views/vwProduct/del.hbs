<form method="post">
    <div class="card">
        <div class="card-header">
            Xoá sản phẩm
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="txtProID">ID</label>
                <input type="text" class="form-control" id="txtProID" name="ID" readonly
                       value="{{this.product.ID}}">
            </div>
            <div class="form-group">
                <label for="txtProName">Sản phẩm</label>
                <input type="text" class="form-control" id="txtProName" name="Name" readonly
                       value="{{this.product.Name}}">
            </div>
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-success" href="/admin/products" role="button">
                <i class="fa fa-angle-left" aria-hidden="true"></i>
                Danh sách
            </a>
            <button type="submit" class="btn btn-danger" formaction="/admin/products/del">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Xoá
            </button>
        </div>
    </div>
</form>
