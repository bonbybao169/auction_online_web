<div class="card text-center">
    <h4 class="card-header d-flex justify-content-between">
        Products
    </h4>
    <div class="card-body">
        <div class="row">
            {{#each this.products}}
                    <div class="col-sm-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">{{Name}}</h6>
                                <a class="btn btn-sm btn-primary" style="vertical-align: middle" href="#" role="button">
                                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                    <span>{{PriceBuyNow}}</span>
                                </a>
                                <p class="card-text mt-2" style="vertical-align: text-bottom">{{Description}}</p>
                            </div>
                        </div>
                    </div>
            {{/each}}
        </div>
    </div>
    <div class="card-footer text-muted">
        2 days ago
    </div>
</div>